const token = Astro.cookies.get("token");
const response = await fetch('http://localhost:3000/posts',{
	method: 'GET',
	headers: {
		'Content-Type': 'application/json',
		'Authorization': `Bearer ${token?.value}`
	},
});
const publications: Post[] = await response.json();  
